<?xml version="1.0" encoding="UTF-8"?>
<entity>
    <name>Alert</name>
    <tableName>alerts</tableName>
    <generate>true</generate>
    <fields>
        <field>
            <name>details</name>
            <type>STRING</type>
            <required>true</required>
            <maxLength>1024</maxLength>
        </field>
        <field>
            <name>level</name>
            <type>ENUM</type>
            <required>true</required>
            <enums>
                <enum>
                    <name>INFO</name>
                    <value>Info</value>
                </enum>
                <enum>
                    <name>WARNING</name>
                    <value>Warning</value>
                </enum>
                <enum>
                    <name>CRITICAL</name>
                    <value>Critical</value>
                </enum>
            </enums>
        </field>
    </fields>
    <relationships>
        <relationship>
            <name>message</name>
            <relationshipType>MANY_TO_ONE</relationshipType>
            <relatedEntityName>Message</relatedEntityName>
            <joinColumnName>message_id</joinColumnName>
            <required>true</required>
            <fetch>LAZY</fetch>
        </relationship>
        <relationship>
            <name>keyword</name>
            <relationshipType>MANY_TO_ONE</relationshipType>
            <relatedEntityName>Keyword</relatedEntityName>
            <joinColumnName>keyword_id</joinColumnName>
            <required>true</required>
            <fetch>LAZY</fetch>
        </relationship>
        <relationship>
            <name>recipient</name>
            <relationshipType>MANY_TO_ONE</relationshipType>
            <relatedEntityName>UserProfile</relatedEntityName>
            <joinColumnName>recipient_user_id</joinColumnName>
            <required>true</required>
            <fetch>LAZY</fetch>
        </relationship>
    </relationships>
</entity>
